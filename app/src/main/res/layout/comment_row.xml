<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comImage"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@mipmap/default_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/comComment"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            />

        <TextView
            android:id="@+id/comUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/comImage"
            android:paddingBottom="15dp"
            android:text="@string/textview"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comComment"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_toEndOf="@+id/comUsername"
            android:padding="5dp"
            android:text="TextView"
            android:textSize="15sp"
            app:ignore="HardcodedText" />
    </RelativeLayout>


</android.support.v7.widget.CardView>