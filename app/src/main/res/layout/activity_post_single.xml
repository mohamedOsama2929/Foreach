<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.monko.foreach.PostSingleActivity">

    <ImageView
        android:id="@+id/singlePostImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/singlePostDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/singlePostImage"
        android:hint="@string/post_description_goes_here"
        android:padding="10dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/singleRemoveBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.54"
        android:background="@mipmap/delete"
        android:visibility="invisible"
        tools:ignore="ObsoleteLayoutParam" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/singlePostDesc"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="5dp"
        android:layout_marginBottom="50dp"></android.support.v7.widget.RecyclerView>

    <EditText
        android:id="@+id/writeComment"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/pushComment"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="@string/add_your_comment"
        android:inputType="textPersonName"
        android:textSize="15sp"
        android:layout_alignTop="@+id/pushComment"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/pushComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/push"
        android:layout_alignParentBottom="true"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>